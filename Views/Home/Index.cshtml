@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">Inventory System Dashboard</h1>
        <p>Manage your inventory efficiently</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Items</h5>
                    <p class="card-text display-4">@ViewBag.TotalItems</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="InventoryItems" asp-action="Index" class="text-white">View Items</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Stock</h5>
                    <p class="card-text display-4">@ViewBag.TotalStock</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-warning h-100">
                <div class="card-body">
                    <h5 class="card-title">Add New Item</h5>
                    <p class="card-text">Quickly add a new inventory item</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="InventoryItems" asp-action="Create" class="text-dark">Add Item</a>
                </div>
            </div>
        </div>
    </div>
</div>
