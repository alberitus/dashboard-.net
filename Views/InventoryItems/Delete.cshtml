@model InventorySystem.Models.InventoryItem

@{
    ViewData["Title"] = "Delete Item";
}

<h1>Delete Item</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="mb-3">
    <label>ID:</label> @Model.Id
</div>
<div class="mb-3">
    <label>Name:</label> @Model.Name
</div>
<div class="mb-3">
    <label>Quantity:</label> @Model.Quantity
</div>
<div class="mb-3">
    <label>Price:</label> @Model.Price.ToString("C")
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
</form>
