@model IEnumerable<InventorySystem.Models.InventoryItem>

@{
    ViewData["Title"] = "Inventory Items";
}

<h1 class="mb-4">Inventory Items</h1>

<p>
    <a class="btn btn-success mb-3" href="@Url.Action("Create")">
        <i class="bi bi-plus-circle"></i> Create New Item
    </a>
</p>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@String.Format(new System.Globalization.CultureInfo("id-ID"), "{0:C}", item.Price)</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-info me-1" href="@Url.Action("Details", new { id = item.Id })">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a class="btn btn-sm btn-warning me-1" href="@Url.Action("Edit", new { id = item.Id })">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.Id })">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
